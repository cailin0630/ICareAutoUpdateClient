<Window x:Class="ICareAutoUpdateClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICareAutoUpdateClient"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ICare.AutoUpdateClient"
        Height="600"
        Width="500"
        Topmost="False"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        OpacityMask="White"
        xmlns:userControls="clr-namespace:ICareAutoUpdateClient.UserControls">

    <Window.Resources>
        <Style  TargetType="TextBlock">
            <Setter Property="Foreground" Value="Chartreuse" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="Chartreuse"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
    </Window.Resources>
    <Border

                Background="Black"
                CornerRadius="10"
                BorderThickness="4"
                BorderBrush="CornflowerBlue">
        <StackPanel>
            <Border>
                <TextBlock Text="ICare.AutoUpdateClient"
                               HorizontalAlignment="Center"
                               Foreground="Chartreuse"
                               VerticalAlignment="Center"
                               FontSize="20">
                </TextBlock>
            </Border>
            <userControls:LoadCircle></userControls:LoadCircle>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Name="MainStackPanel" Grid.Row="0"
                            Orientation="Horizontal">
                    <TextBlock Text="主程序更新包：" />
                    <ProgressBar Name="MainProgressBar" />
                    <TextBlock Name="MainTextBlock" Text="0%"></TextBlock>
                </StackPanel>
                <StackPanel Name="PublicStackPanel"  Grid.Row="1"
                            Orientation="Horizontal">
                    <TextBlock Text="公共库更新包：" />
                    <ProgressBar Name="PublibProgressBar" />
                    <TextBlock Name="PublibTextBlock" Text="0%"></TextBlock>
                </StackPanel>
            </Grid>

            <TextBox
                    Name="TextBoxInput"
                    Background="Transparent"
                    Foreground="Chartreuse"
                    FontSize="15"
                    BorderThickness="0"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    AutoWordSelection="True" />
        </StackPanel>
    </Border>
</Window>